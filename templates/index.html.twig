<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
</head>
<body>
    <h1>Movies List</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Duration</th>
                <th>Released Year</th>
            </tr>
        </thead>
        <tbody>
            {% for movie in movies %}
            <tr>
                <td>{{ movie.title }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.released_year }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
